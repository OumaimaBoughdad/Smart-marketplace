<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary: #006d77; /* Deep teal */
            --primary-dark: #004d55; /* Darker teal */
            --secondary: #ff6f61; /* Coral */
            --secondary-dark: #cc4b3e; /* Darker coral */
            --background: #f8fafc; /* Soft off-white */
            --text-dark: #1a1a1a; /* Charcoal text */
            --text-muted: #5f6a7a; /* Muted text */
            --box-shadow: 0 6px 12px rgba(0, 0, 0, 0.08);
            --border-radius: 12px;
        }

        body {
            background-color: var(--background);
            font-family: 'Inter', sans-serif;
            color: var(--text-dark);
        }

        .navbar {
            background-color: var(--primary) !important;
            box-shadow: var(--box-shadow);
            padding: 1rem 0;
        }

        .navbar-brand {
            font-weight: 700;
            font-size: 1.5rem;
            color: #ffffff !important;
            transition: color 0.3s ease;
            cursor: pointer;
        }

        .navbar-brand:hover {
            color: var(--secondary) !important;
        }

        .navbar-toggler {
            border-color: rgba(255, 255, 255, 0.5);
        }

        .navbar-toggler-icon {
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 30 30'%3e%3cpath stroke='rgba(255, 255, 255, 0.75)' stroke-linecap='round' stroke-miterlimit='10' stroke-width='2' d='M4 7h22M4 15h22M4 23h22'/%3e%3c/svg%3e");
        }

        .container {
            text-align: center; /* Center text in container */
        }

        main {
            min-height: calc(100vh - 200px); /* Ensure main content fills space */
            padding-bottom: 2rem;
        }

        .footer {
            background-color: #ffffff;
            border-top: 1px solid #e2e8f0;
            color: var(--text-muted);
            font-size: 0.9rem;
            padding: 1.5rem 0;
            box-shadow: 0 -4px 8px rgba(0, 0, 0, 0.05);
        }

        .footer .container {
            display: flex;
            justify-content: center;
            align-items: center;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark border-bottom mb-4">
            <div class="container">
                <a class="navbar-brand" id="homeLink" href="~/">Smart MarketPlace</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <!-- Removed Accueil link -->
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            © 2025 - Smart MarketPlace - Générateur de Missions IA
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Add click event to Smart MarketPlace logo
            document.getElementById('homeLink').addEventListener('click', function() {
                window.location.href = '~/';
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>